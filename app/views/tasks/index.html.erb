<div class="container mt-3 mb-3">
  <div class="d-flex justify-content-center">
    <h2>Task List ayyy :D :D :D</h2>
  </div>
  <div class="d-flex flex-column align-items-center p-3" style="height: 100vh;">

    <% if @tasks.any? %>
      <ul class="list-group text-center">
        <% @tasks.each do |task| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <div class="d-flex flex-column">
              <div class="form-group mb-0"><%= link_to task.title, task_path(task) %></div>
              <p><strong>done: <%= task.completed ? 'yes' : 'no' %></strong></p>
            </div>
            <div class="btn-group">
              <%= link_to 'Edit', edit_task_path(task), class: 'btn btn-primary font-color black' %>
              <%= form_for task, url: task_path(task), method: :delete, html: { class: 'delete-form ml-2' } do |f| %>
                <%= f.submit 'Delete', class: 'btn btn-danger' %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No tasks available, hermano</p>
    <% end %>

    <div class="mt-3">
      <%= link_to 'Add a new task', new_task_path, class: 'btn btn-primary' %>
    </div>

  </div>
</div>
