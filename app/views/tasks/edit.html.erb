<div class="container mt-3 mb-3">
  <div class="d-flex justify-content-center">
    <h2>What would u like to change</h2>
  </div>
  <div class="d-flex flex-column align-items-center" style="height: 100vh;">
    <%= form_with(model: @task, url: task_path(@task), method: :patch) do |form| %>
      <%= render 'form', form: form %>
      <%= form.submit 'Edit Task', class: 'btn btn-success mt-3'%>
    <% end %>

    <%= link_to 'Back to menu', tasks_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>
